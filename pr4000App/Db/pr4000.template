# The :DISA record is essentially a development
# tool and not intended for use in the field.
#
record(bi, "$(device):DISA")
    {
    field(DESC, "Channel Disable")
    field(VAL,  "0")
    field(ZNAM, "ENABLE")
    field(ONAM, "DISABLE")
    field(PINI, "YES")
    }


