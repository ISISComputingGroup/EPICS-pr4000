    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:DISPTEXTOUT")
    field(SDIS, "$(P)DISABLE")
}

record(stringin, "$(P)DISPTEXT")
{
    field(DESC, "Display Text")
    field(DTYP, "stream")
