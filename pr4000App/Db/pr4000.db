record(mbbi, "$(P)REMOTEMODE")
{
    field(DESC, "Remote Mode")
    field(DTYP, "stream")
    field(INP,  "@pr4000.protocol remotemode() $(PORT)")
    field(ZRVL, "0")
    field(ZRST, "OFF")
    field(ONVL, "1")
    field(ONST, "ON")
    field(SDIS, "$(P)DISABLE")
    field(SCAN, "2 second")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:REMOTEMODE")
}

record(mbbo, "$(P)REMOTEMODE:SP")
{
    field(DESC, "Remote Mode Set")
    field(DTYP, "stream")
    field(OUT,  "@pr4000.protocol remotemode_set() $(PORT)")
    field(ZRVL, "0")
    field(ZRST, "OFF")
    field(ONVL, "1")
    field(ONST, "ON")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:REMOTEMODE:SP")
    field(SDIS, "$(P)DISABLE")
}
    
